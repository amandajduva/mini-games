<div class="top-row">
  <header class="header neonText">
    <h1 contenteditable spellcheck="false">LOGIN TO PLAY</h1>
  </header>
</div>

<div class="row">
  <div class="login">
    <h2 class="heading">LOGIN</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="text form-input" type="text" id="username-login" placeholder="username" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="text form-input" type="password" id="password-login" placeholder="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">LOGIN</button>
      </div>
    </form>
  </div>
  <div class="signup">
    <h2 class="heading">SIGN UP</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Username:</label>
        <input class="text form-input" type="text" id="name-signup" placeholder="username" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="text form-input" type="text" id="email-signup" placeholder="email"/>
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="text form-input" type="password" id="password-signup" placeholder="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">SIGN UP</button>
      </div>
    </form>
  </div>
</div>